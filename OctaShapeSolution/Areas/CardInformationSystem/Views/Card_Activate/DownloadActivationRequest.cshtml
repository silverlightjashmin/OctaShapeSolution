@model IEnumerable<OctaShape.Data.Card_Activate>
@{
    ViewBag.Title = "Card Information System - Download Activation Request ";
    Layout = "~/Areas/CardInformationSystem/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>



    <title>@ViewBag.Title</title>

</head>

<body>



    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Download Card Activation Request</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">

                        @using (Html.BeginForm("DownloadCardRequest", "Card_Requested", null, FormMethod.Post))

                        {

                            @Html.AntiForgeryToken()



                            <div class="form-horizontal">



                                <div class="form-group">
                                    @Html.LabelFor(model => model.FirstOrDefault().Activate_Start, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.FirstOrDefault().Activate_Start, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.sdate } })
                                        @Html.ValidationMessageFor(model => model.FirstOrDefault().Activate_Start, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.FirstOrDefault().Activate_End, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.FirstOrDefault().Activate_End, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FirstOrDefault().Activate_End, "", new { @class = "text-danger" })
                                    </div>
                                </div>





                                <input type="submit" value="Show Data" class="btn btn-primary" formaction="DownloadActivationRequest" />
                                <input type="submit" value="Download Data " class="btn btn-success" formaction="DumpData" />
                            </div>


                        }



                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">


                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Activate_Date)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Activate_Start)


                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Activate_End)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.No_ofCards)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Activated_By)
                                    </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.FirstOrDefault().Card_ReceivedDetails)
            {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Card_Activate.Activate_Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Card_Activate.Activate_Start)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Card_Activate.Activate_End)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Card_Activate.No_ofCards)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Card_Activate.Activated_By)
                                        </td>



                                    </tr>
                                }




                            </tbody>
                        </table>

                    </div>





                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- /.row -->
        <!-- /.row -->
        <!-- /.row -->
    </div>






</body>


</html>
