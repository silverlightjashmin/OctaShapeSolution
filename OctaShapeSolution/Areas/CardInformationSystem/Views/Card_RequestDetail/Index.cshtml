@model IEnumerable<OctaShape.Data.Card_RequestDetail>

@{
    ViewBag.Title = "Card Information System - Card Request ";
    Layout = "~/Areas/CardInformationSystem/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Customer Request Details</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <p>
        @Html.ActionLink("New Card Application", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Request_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Created_By)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approved_By)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Card_RequestType.Request_Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Request_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Branch_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer_Name)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Created_By)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Approved_By)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Card_RequestType.Request_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                    @{
                        if (Session["User_Group"].ToString() != "User")
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }
                    }
                  
                </td>
            </tr>
        }

    </table>
    </div>