@model IEnumerable<OctaShape.Data.Card_ReceivedDetails>

@{
    ViewBag.Title = "Card Information System - Card Delivery Record ";
    Layout = "~/Areas/CardInformationSystem/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Card Delivered to Customer</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <p>
        @Html.ActionLink("Upload Received Cards Data", "UploadReceivedCards", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Delivered_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account_No)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Card_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expiry_Date)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Delivered_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Branch_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Card_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expiry_Date)
                </td>


                <td>
                    @Html.ActionLink("Deliver Card", "Edit", new { id = item.Received_Id }) |

                </td>
            </tr>
        }

    </table>
</div>