@{
    ViewBag.Title = "Card Information System - Upload Received Card Details ";
    Layout = "~/Areas/CardInformationSystem/Views/Shared/_AdminLayout.cshtml";
}
<title>@ViewBag.Title</title>


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Import Received Card Details</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

@using (Html.BeginForm("ImportData", "Card_Received", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


                    <div class="form-group">
                        <b><label for="exampleInputFile">Upload Your File Here:</label></b>
                        <input type="file" id="exampleInputFile3" name="file">

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-4">
                            <input type="submit" value="Import" class="btn btn-primary" />
                        </div>
                    </div>
}
                </div>

                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Received_Id
                                </th>
                                <th>
                                    Branch_Code

                                </th>
                                <th>
                                    Account_Number
                                </th>
                                <th>
                                    Card_Number
                                </th>
                                <th>
                                    Expiry_Date
                                </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Card_RequestDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Request_StardDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Request_EndDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total_CardsRequested)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Request_By)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>