@model OctaShapeSolution.Models.AssignRole

@{
    ViewBag.Title = "Assign Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>@ViewBag.Title</title>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="page-wrapper">

        @{
            if (ViewBag.Message != null)
            {

                <div class="container col-lg-8">
                    <div class="alert alert-success fade in ">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <strong>Thank You , @ViewBag.Message</strong>
                    </div>
                </div>

            }
        }

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Assign User Role</h1>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                   

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">



                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserId, "UserId", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-8">
                                        @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <p></p>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RoleId, "RoleId", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-8">
                                        @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                               
                                        <div class="form-group">
                                            <div class="col-md-offset-8 col-md-7">
                                                <input type="submit" value="AssignRole" class="btn btn-primary" />
                                            </div>
                                        
                                    </div>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
        </div>
                            </div>





                            }
